@{ WebUI.Models.Basket.CartItem cart = Session["basket"] as WebUI.Models.Basket.CartItem; }

<header class="section-header">

    <nav class="navbar navbar-dark navbar-expand p-0 bg-primary">
        <div class="container">
            <ul class="navbar-nav d-none d-md-flex mr-auto">
                <li class="nav-item"><a class="nav-link" href="~/Content/Theme/~/Content/Theme/#">Home</a></li>
                <li class="nav-item"><a class="nav-link" href="~/Content/Theme/~/Content/Theme/#">Delivery</a></li>
                <li class="nav-item"><a class="nav-link" href="~/Content/Theme/~/Content/Theme/#">Payment</a></li>
            </ul>
            <ul class="navbar-nav">
                <li class="nav-item dropdown">
                    @*<a href="~/Content/Theme/~/Content/Theme/#" class="nav-link dropdown-toggle" data-toggle="dropdown"> English </a>*@
                    @Html.ActionLink("Admin Panel", "Index", "Home", new { Area = "Admin" }, new { @class = "nav-link" })
                    <ul class="dropdown-menu dropdown-menu-right" style="max-width: 100px;">
                        <li><a class="dropdown-item" href="~/Content/Theme/~/Content/Theme/#">Arabic</a></li>
                        <li><a class="dropdown-item" href="~/Content/Theme/~/Content/Theme/#">Russian </a></li>
                    </ul>
                </li>
            </ul> <!-- list-inline //  -->
        </div> <!-- navbar-collapse .// -->
        </div> <!-- container //  -->
    </nav> <!-- header-top-light.// -->

    <section class="header-main border-bottom">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-2 col-6">
                    <a href="~/Content/Theme/~/Content/Theme/http://bootstrap-ecommerce.com" class="brand-wrap">
                        <img class="logo" src="~/Content/Theme/images/logo.png">
                    </a> <!-- brand-wrap.// -->
                </div>
                <div class="col-lg-6 col-12 col-sm-12">
                    <form action="#" class="search">
                        <div class="input-group w-100">
                            <input type="text" class="form-control" placeholder="Search">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="submit">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                        </div>
                    </form> <!-- search-wrap .end// -->
                </div> <!-- col.// -->
                <div class="col-lg-4 col-sm-6 col-12">
                    <div class="widgets-wrap float-md-right">
                        <div class="widget-header  mr-3">

                            @if (cart != null)
                            {
                <a href="@Url.Action("Index","ShoppingCart")" class="icon icon-sm rounded-circle border"><i class="fa fa-shopping-cart"></i></a>
                                <span class="badge badge-pill badge-danger notify">@cart.MyBasket.Count</span> }
                            else
                            {
                <a href="@Url.Action("Index","ShoppingCart")" class="icon icon-sm rounded-circle border"><i class="fa fa-shopping-cart"></i></a>
                                <span class="badge badge-pill badge-danger notify">0</span>}

                        </div>
                        <div class="widget-header icontext">
                            <a href="~/Content/Theme/~/Content/Theme/#" class="icon icon-sm rounded-circle border"><i class="fa fa-user"></i></a>
                            <div class="text">
                                <span class="text-muted">Welcome!</span>
                                <div>
                                    <a href="~/Content/Theme/~/Content/Theme/#">Giriş</a> |
                                    <a href="@Url.Action("Register")"> Kayıt ol</a>
                                </div>
                            </div>
                        </div>
                    </div> <!-- widgets-wrap.// -->
                </div> <!-- col.// -->
            </div> <!-- row.// -->
        </div> <!-- container.// -->
    </section> <!-- header-main .// -->
</header> <!-- section-header.// -->
