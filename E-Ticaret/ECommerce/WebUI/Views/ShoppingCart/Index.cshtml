
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    WebUI.Models.Basket.CartItem cart = Session["basket"] as WebUI.Models.Basket.CartItem;
}

<div class="container" style="margin-top:20px;">
    <div class="row">
        <aside class="col-lg-9">
            <div class="card">
                <table class="table table-borderless table-shopping-cart">
                    <thead class="text-muted">
                        <tr class="small text-uppercase">
                            <th scope="col">Ürün Adı</th>
                            <th scope="col" width="120">Adet</th>
                            <th scope="col" width="120">Fiyat</th>
                            <th scope="col" class="text-right" width="200"> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in cart.MyBasket)
                        {
                            <tr>
                                <td>
                                    <figure class="itemside align-items-center">
                                        <div class="aside"><img src="~/Content/images/product-images/@c.ImagePath" class="img-sm"></div>
                                        <figcaption class="info">
                                            <a href="#" class="title text-dark">@c.ProductName</a>
                                        </figcaption>
                                    </figure>
                                </td>
                               
                                <td class="text-center">
                                    <span><b>@c.Quantity</b></span>
                                    <select class="form-control product-count">
                                        <option>1</option>
                                        <option>2</option>
                                        <option>3</option>
                                        <option>4</option>
                                    </select>
                                </td>
                                <td>
                                    <div class="price-wrap">
                                        <var class="price">@c.SubTotal</var>
                                        <small class="text-muted"> @c.UnitPrice </small>
                                    </div> <!-- price-wrap .// -->
                                </td>
                                <td class="text-right">
                                    <a href="" class="btn btn-light cart-update"> Güncelle</a>
                                    <a href="" class="btn btn-light"> Kaldır</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="card-body border-top">
                    <p class="icontext"><i class="icon text-success fa fa-truck"></i> 1-2 gün içerisinde siparişleriniz ücret kargo ile teslin edilecektir.</p>
                </div> <!-- card-body.// -->

            </div> <!-- card.// -->

        </aside> <!-- col.// -->
        <aside class="col-lg-3">

            <div class="card mb-3">
                <div class="card-body">
                    <form>
                        <div class="form-group">
                            <label>Have coupon?</label>
                            <div class="input-group">
                                <input type="text" class="form-control" name="" placeholder="Coupon code">
                                <span class="input-group-append">
                                    <button class="btn btn-primary">Apply</button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div> <!-- card-body.// -->
            </div> <!-- card.// -->

            <div class="card">
                <div class="card-body">
                    <dl class="dlist-align">
                        <dt>Total price:</dt>
                        <dd class="text-right">$69.97</dd>
                    </dl>
                    <dl class="dlist-align">
                        <dt>Discount:</dt>
                        <dd class="text-right text-danger">- $10.00</dd>
                    </dl>
                    <dl class="dlist-align">
                        <dt>Total:</dt>
                        <dd class="text-right text-dark b"><strong>$59.97</strong></dd>
                    </dl>
                    <hr>
                    <p class="text-center mb-3">
                        <img src="../images/misc/payments.png" height="26">
                    </p>
                    <a href="#" class="btn btn-primary btn-block"> Ödeme Yap </a>
                    <a href="@Url.Action("Index","Home")" class="btn btn-light btn-block">Alışverişe Devam Et</a>
                </div> <!-- card-body.// -->
            </div> <!-- card.// -->

        </aside> <!-- col.// -->


    </div>
</div>

