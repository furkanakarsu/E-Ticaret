@model List<Category>
@{
    ViewBag.Title = "AddSubCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Alt Kategori Ekle</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label>Alt Kategori Adı</label>
                    @*@Html.TextBoxFor(x => x.SubCategoryName, new { @class="form-control"})*@
                    <input type="text" class="form-control" name="SubCategoryName" placeholder="alt kategori adı" />
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    @*@Html.TextBoxFor(x => x.Description, new { @class = "form-control" })*@
                    <input type="text" class="form-control" name="Description" placeholder="açıklama girin" />
                </div>
                <div class="form-group">
                    <label>Kategori Seç:</label>
                    <select name="categoryId" class="form-control">
                        <option>Kategori Seçin</option>
                        @foreach (Category category in Model)
                        {
                            <option value="@category.Id">@category.CategoryName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Gönder</button>
            </form>
        </div>
    </div>
</div>

