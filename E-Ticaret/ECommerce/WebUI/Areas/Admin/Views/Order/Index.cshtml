@model List<Order>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["Result"] != null)
{
    <div class="alert alert-success">
        <span>@TempData["Result"]</span>
    </div>
}
<div class="col-lg-12">
    <div class="card">
        <div class="card-heading">
            <div class="row mt-2 ml-2 mr-2">
                <div class="col-lg-6">
                    <h3>Sipariş Listesi</h3>
                </div>
                <div class="col-lg-6 text-right">
                    @Html.ActionLink("Sipariş Detay", "Index","OrderDetail", null, new { @class = "btn btn-success" })
                </div>
            </div>

        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>
                            Sipariş Tarihi
                        </th>
                        <th>
                            Sipariş Durumu
                        </th>
                        <th>
                            Kullanıcı
                        </th>
                        <th></th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (Order order in Model)
                        {
                           <tr>
                               <td>@order.OrderDate</td>
                               <td>@order.IsConfirmed</td>
                               <td>@order.AppUserId</td>
                           </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4">
                                <div class="alert alert-warning text-center">
                                    <span>Herhangi bir sipariş mevcut değil.</span>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


</div>

