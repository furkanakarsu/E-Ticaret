@model AppUser
@{
    ViewBag.Title = "UpdateAppUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <h3>Kullaniciyi Guncelle</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label>Adı</label>
                    @Html.TextBoxFor(x => x.Name, new { @placeholder = Model.Name, @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Soyadi</label>
                    @Html.TextBoxFor(x => x.LastName, new { @placeholder = Model.LastName, @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Kullanici Adi</label>
                    @Html.TextBoxFor(x => x.UserName, new { @placeholder = Model.UserName, @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Password</label>
                    @Html.TextBoxFor(x => x.Password, new { @placeholder = Model.Password, @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(x => x.Email, new { @placeholder = Model.Email, @class = "form-control" })
                </div>



                <button type="submit" class="btn btn-primary">Guncelle</button>
            </form>
        </div>
    </div>
</div>

