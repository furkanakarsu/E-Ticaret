@model Product

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <h3>Ürünü Guncelle</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label>Ürün Adı</label>
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", @placeholder = Model.ProductName })
                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control", @placeholder = Model.UnitPrice })
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control", @placeholder = Model.UnitsInStock })
                </div>
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </form>
        </div>
    </div>
</div>


