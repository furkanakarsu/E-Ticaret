@model Product
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        <span>@TempData["Error"]</span>
    </div>
}
else if (TempData["Result"] != null)
{
    <div class="alert alert-success">
        <span>@TempData["Result"]</span>
    </div>
}
<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <h3>Ürün Ekle</h3>
        </div>
        <div class="card-body">
            <form method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Ürün Adı</label>
                    @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Fiyat</label>
                    @Html.TextBoxFor(x => x.UnitPrice, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Stok</label>
                    @Html.TextBoxFor(x => x.UnitsInStock, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Görsel</label>
                    <input type="file" name="productImage" />
                </div>
                <div class="form-group">
                    <label>Alt Kategori Seç:</label>
                    <select name="subCategoryId" class="form-control">
                        <option>Alt Kategori Seç</option>
                        @foreach (SubCategory subCategory in TempData["SubCategories"] as IEnumerable<SubCategory>)
                        {

                            <option value="@subCategory.Id">@subCategory.SubCategoryName</option>
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Ekle</button>
            </form>
        </div>
    </div>
</div>


