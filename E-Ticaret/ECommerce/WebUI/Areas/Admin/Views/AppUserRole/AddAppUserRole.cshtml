@model  AppUserRole

@{
    ViewBag.Title = "AddAppUserRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-6">
    <div class="card">
        <div class="card-header">
            <h3>Rol Ekle</h3>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label>Rol Adı</label>
                    @Html.TextBox(x=> x.Role, new { @class = "form-control" })
                </div>
                
                <button type="submit" class="btn btn-primary">Ekle</button>
            </form>
        </div>
    </div>
</div>

